 <p id="notice">Book was successfully updated.</p>
 
 <h2>Editing Book</h2>
<%= form_with model: @book, url:book_path, method: :patch do |f| %>


  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>
<% end %>

<span><%= link_to 'Show', book_path(@book) %></span>
